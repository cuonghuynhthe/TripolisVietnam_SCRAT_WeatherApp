<!doctype html>
<html ng-app>

<body>

<div id="container">
  <div id="logo">
    <form>
      <label style="color: azure;font-weight: bolder;">SCRAT Weather Forecast  </label>
      <input id="tags" ng-model="keyss" placeholder=" Enter city or Zip code"> {{keyword}}
    </form>
  </div><!--end logo-->
  <div id="content">
    <div id="primary">
      <h2>Favourite  Location</h2>
      <ul  style="list-style-type: none;">
        <li>
          <input type="checkbox">
          <a href="#" >Ho Chi Minh</a>
        </li>
        <li>
          <input type="checkbox">
          <a href="#">Ha Noi</a>
        </li>
        <li>
          <input type="checkbox">
          <a href="#">An Giang</a>
        </li>
      </ul>
      <button class="myButton">Clear</button>
    </div><!--end primary-->
    <div id="sidebar">
      <div id="title">
        <span style="font-size: 29px;color: aliceblue;">Name Location</span>
        <button class="myButton">+</button>
      </div>

      <div id="detail">
        <span style="margin-bottom: 10px; color:aliceblue">Partly Cloudy</span><br>
        <span  style="color:aliceblue">36</span>  <span  style="color:aliceblue"> - </span> <span style="color:aliceblue"> 21 </span> <br>
        <div style="margin-top: 35px; color:aliceblue">
          <span style="font-size: 100px;">28</span>
          <button class="myButton">C</button>
        </div>

      </div>
      <div id="forecast">
        <h2>Forecast</h2>
        <table style="width:450px">
          <tr>
            <td class="forcastname">Today</td>
            <td><img src="/images/mua.png"></td>
            <td class="forcastname">36</td>
            <td>26</td>
          </tr>
          <tr>
            <td class="forcastname">Tomorrow</td>
            <td><img src="/images/mua.png"></td>
            <td class="forcastname">36</td>
            <td>26</td>
          </tr>
          <tr>
            <td class="forcastname">Wednesday</td>
            <td><img src="/images/mua.png"></td>
            <td class="forcastname">36</td>
            <td>26</td>
          </tr>
          <tr>
            <td class="forcastname">Thursday</td>
            <td><img src="/images/mua.png"></td>
            <td class="forcastname">36</td>
            <td>26</td>
          </tr>
          <tr>
            <td class="forcastname">Friday</td>
            <td><img src="/images/mua.png"></td>
            <td class="forcastname">36</td>
            <td>26</td>
          </tr>
        </table>
      </div>
    </div><!--end sidebar-->
  </div><!--end content-->
  <div id="footer">

  </div><!--end footer-->
</div><!--end container-->
</body>
</html>